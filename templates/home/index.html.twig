{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
{% for message in app.flashes('notice') %}
    <div class="flash-notice flashMessage">
        {{ message }}
    </div>
{% endfor %}
<div class="img-background-presentation">
    <div class="wrapper">
        <div class="content">
            <p class="title-1">Bienvenue sur </p>
            <h1 class="title-2">Le die-vin de Bacchus !</h1>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="container">
        <h1 class=" pt-5 title-bestseller" id="Projets">Les Best Sellers</h1>
        <div class="row justify-content-around">
            {% for wine in wine %}
            {% if wine.isBestseller == 1 %}
            <div class="col-xl-3 col-l-6 col-lg-6 col-md-6 col-sm-11 mt-5 mb-5 mx-auto">
                <div class="card">
                    <h5 class="card-title wine-name">{{wine.name}}</h5>
                    <hr>
                    <img src="{{wine.picture}}" class="card-img-top" alt="...">
                    <div class="card-body">
                      <a href="{{wine.id}}" class="btn btn-primary card-button">Voir plus</a>
                      <a href="{{ path('cart_add', {'id': wine.id} )}}" class="btn btn-success">
                        <i class="fas fa-shopping-cart mr-1"></i>
                      </a>
                    </div>
                  </div>
            </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
